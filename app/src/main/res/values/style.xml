<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSpinnerText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorspinner</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxBackgroundColor">@color/textInputLayoutBackground</item>

        <item name="hintTextColor">@color/textInputLayoutFloatingTextColor</item>

        <item name="boxStrokeColor">@color/textInputLayoutBoxStrokeColor</item>

        <item name="android:textColorHint">@color/textInputLayoutTextColor</item>

        <item name="shapeAppearanceOverlay">@style/TextInputLayoutShapeAppearance</item>
    </style>
    <style name="TextInputLayoutShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>
</resources>